{% extends 'base.html.twig' %}

{% block title %}Student
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<h1>Student</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ student.id }}</td>
				</tr>
				<tr>
					<th>Name</th>
					<td>{{ student.name }}</td>
				</tr>
				<tr>
					<th>Classroom</th>
					<td>
						{{ student.classroom.name }}
					</td>
				</tr>
				<tr>
					<th>Courses</th>
					<td>
						{% for course in student.courses %}
							{{ course.coursename }}
						{% endfor %}
					</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('app_student_index') }}" class="btn btn-primary">Back to List</a>

		<a href="{{ path('app_student_edit', {'id': student.id}) }}" class="btn btn-warning">Edit</a>

		{{ include('student/_delete_form.html.twig') }}
	</div>
{% endblock %}
